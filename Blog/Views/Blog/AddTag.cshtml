@{
    ViewBag.Title = "AddTag";
}

<h2>Add Tags</h2>

@using(Html.BeginForm("AddTag", "Blog", FormMethod.Post))
{
    <p>Перечислите теги через запятую (Tag1,Tag2,Tag3....)</p>
    <input type="text" name="tags" class="form-control text-box single-line d-inline-b"/>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <input type="submit" class="btn btn-default"/>

    <input type="hidden" value="@ViewBag.articleId" name="articleId"/>
    
}