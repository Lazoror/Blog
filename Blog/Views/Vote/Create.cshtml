@model DAL.Models.Vote

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vote</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>Название голосования</p>
        @Html.EditorFor(model => model.VoteName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.VoteName, "", new { @class = "text-danger" })

        <p>Введите варианты ответов через запятую (answer1,answer2,answer3.....)<p />
        @Html.EditorFor(model => model.VoteResults, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.VoteResults, "", new { @class = "text-danger" })


        <input type="submit" value="Create" class="btn btn-default d-block" />

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
